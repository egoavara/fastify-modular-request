{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "Node",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}